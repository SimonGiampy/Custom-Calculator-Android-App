<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/lg_number" />
            <stroke
                android:width="1dp"
                android:color="@color/lg_number_stroke" />
        </shape>
    </item>
    <item>
        <ripple android:color="#40000000">
            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="@color/lg_number" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/lg_number_stroke" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>